<% @page_title = 'New Account' %>

<%= error_messages_for 'user' %>
<% form_for :user, :url => admin_users_path do |f| %>
    <p><label for="user_unique_name">Unique Name</label><br/>
    <%= f.text_field :unique_name %></p>
    <p><label for="user_email_address">Email Address</label><br/>
    <%= f.text_field :email_address %></p>
    <p><label for="user_password">Password</label><br/>
    <%= f.password_field :password %></p>
    <p><label for="user_password_confirmation">Confirm Password</label><br/>
    <%= f.password_field :password_confirmation %></p>
  <p><label for="user_super_admin">Super Admin</label><br/>
  <%= f.check_box :super_admin %><br/></p>
  <%= submit_tag "Submit", :id=>"submit" %>
<% end %>
